# Sample .env for replication
# All paths are absolute or derived at runtime.

# Implementation repository
WEBSEC_REPO="https://github.com/alexcolls/websec"
# Tag, branch, or commit (e.g., v0.9.9 or main). You can override before running.
WEBSEC_REF="main"

# Optional: arguments passed to the implementation scripts (if any)
WEBSEC_INSTALL_ARGS=""
WEBSEC_RUN_ARGS=""

# Output base directory (absolute or will be resolved under repo_root/build)
OUTPUT_DIR=""

# Logging toggle for downstream scripts (if supported by implementation)
SAVE_LOGS="true"
